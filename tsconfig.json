{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@polpware/tinymce-util": [
        "dist/polpware/tinymce-util"
      ],
      "@polpware/tinymce-util/*": [
        "dist/polpware/tinymce-util/*"
      ],
      "@polpware/expr-builder": [
        "dist/polpware/expr-builder/polpware-expr-builder",
        "dist/polpware/expr-builder"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}